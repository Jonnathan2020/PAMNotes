<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAMNotes.MainPage">

   <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
        <Label
           x:Name="Labeltxt"
            Text=" "
           />

        <Editor Placeholder="Escreva sua anotação!"
                x:Name="NoteEditor"
                HeightRequest="300"/>

        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
            <Button Text="Salvar" x:Name="SaveButton" Clicked="SaveButton_Clicked"/>
            <Button Text="Apagar" x:Name="DeleteButton" Clicked="DeleteButton_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
